<script type="x/template" id="vue-item-filter">
    <div v-if="facet.name" class="col-xs-12">
        <div class="h3">${facet.name}</div>
        <div class="form-check" v-for="value in facets" :key="value.id">
            <input :id="'option-' + value.id" class="forn-check-input-filter" type="checkbox" :checked="isSelected(value.id)" @change="updateFacet(value)" :disabled="isLoading">
            <label :for="'option-' + value.id" class="form-check-label">
                ${ value.name }
            </label>
        </div>
    </div>
</script>
